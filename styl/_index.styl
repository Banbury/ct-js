@charset "utf-8"

// минимальная ширина шаблона - 380 пикс

/* частотники */
trans =
    transition 0.35s ease all
transshort =
    transition 0.15s ease all
shad =
    box-shadow 0 0.1rem 0.2rem rgba(0, 0, 0, 0.5)
shadamb =
    box-shadow 0 0 0.35rem rgba(0, 0, 0, 0.5)

/* шрифты */
fonts = 'Open Sans', sans-serif, serif
font-mono = Consolas, monospace

br = 0.2rem
iconsize = 1.5rem

/* цвета */
act = #446adb
acttext = #446adb
accent1 = #5144db
accent2 = #44dbb5
error = #d44f57
red = error
success = #4ab660
green = success
warning = #ff9748
orange = warning

.error
    color error
.success
    color success
.warning
    color warning

bl = #e1e2e5
bd = #c8cdd1

text = #666
snow = #fafafa

/* анимации */
@keyframes rotate
    100%
        transform rotate(360deg)
@keyframes fadeOut
    from
        opacity 1
        visibility visible
    to
        opacity 0
        visibility hidden
.fadeout
    animation forwards 0.5s linear fadeOut

