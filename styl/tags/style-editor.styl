style-editor
    display flex
    flex-direction row
    .nav
        border-bottom-left-radius 0
        border-bottom-right-radius 0
    .align
        margin-bottom 0.2em
#stylepreview, #styleleft
    flex 1 1 auto
#styleleft
    flex-grow 0
    width 25em
    padding 0.5em
#topleft, #topcenter, #topright
    i
        position relative
        top -0.5rem
#bottomleft, #bottomcenter, #bottomright
    i
        position relative
        top 0.5rem