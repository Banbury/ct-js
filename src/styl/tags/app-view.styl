app-view
    position fixed
    top 0
    left 0
    right 0
    bottom 0
    & > .flexrow > nav
        flex-flow row wrap
    li
        position relative
#theCatMenu
    top 100%
    left 0
#theAppControls
    flex 0.35 1 12rem
#theMainNav
    flex 1 1 60rem

body.maximized #theMainNav
    @media (max-width 1000px)
        flex-wrap wrap

body.restored
    #theMainNav
        right 0
    #theAppControls
        display none

#theMainNav, #theAppControls
    border-radius 0

@media (max-width 1000px)
    #theMainNav span
        display none
    #theMainNav svg:first-child
        margin-right 0
