room-editor
    display flex
    flex-direction row
    .aSearchWrap
        display block
        flex 1 1 100%
        margin 0 0 3px 0
        input
            box-sizing border-box
            width 100%
            font-size 90%
            border-radius 0
    .toolbar
        display flex
        flex-direction column
        padding 0.5em
        width 17em
        box-sizing border-box
        flex 1 1 auto
        flex-grow 0
        .settings .fifty
            padding 0.5rem
        .palette
            flex 1 1 auto
        .settings button
            margin 0.5em 0
        .nav
            border-bottom-right-radius 0
            border-bottom-left-radius 0
    .palette
        position relative
        .tabwrap
            position absolute
            left 0
            right 0
            top 0
            bottom 0
    .editor
        display flex
        position relative
        flex 1 1 auto
        .shift
            position absolute
            top 0.5rem
            left 0.5rem
            span
                text-shadow 0 1px 0 white
        .zoom
            position absolute
            top 0.5rem
            right 0.5rem
            b
                text-shadow 0 1px 0 white
        .grid
            position absolute
            bottom 0.5rem
            right 0.5rem
        .center
            position absolute
            bottom 0.5rem
            left 0.5rem
        canvas
            width 100%
            height 100%

.room-editor-TypeSwatches, .room-editor-Backgrounds
    overflow-y scroll
    position absolute
    width 100%
.room-editor-TypeSwatches
    padding 0 !important
    display flex
    flex-flow row wrap
    align-content start
    align-items flex-start
.room-editor-aTypeSwatch
    list-style none
    border 1px solid bl
    flex 1 1 30%
    display inline-block
    box-sizing border-box
    text-align center
    margin -1px -1px 0 0
    cursor pointer
    padding 0 0.4em
    font-size 80%
    line-height 1.7
    {trans}
    position: relative
    max-width calc(33.333333% + 0.75px)
    z-index 1
    span
        display block
        text-overflow ellipsis
        overflow hidden
    &:hover
        border-color act
        z-index 10
        {transshort}
    &.active
        border-color accent1
        z-index 10
    img
        height 64px
        width 64px
    &.filler
        height 0px
        visibility hidden

.room-editor-Backgrounds
    padding 0.5em
    ul
        margin 0
        padding 0
    .bg
        list-style none
        height 64px
        padding 0.3em 0.8em
        border-radius br
        border 1px solid bl
        line-height 64px
        margin-bottom 0.2em
        img
            float right
            width 64px
            height 64px
            border-radius br
            cursor pointer
        span
            cursor pointer
            border-bottom 1px dotted bl
            width 6em
            line-height 1
            display inline-block
            vertical-align middle
            margin-top 1em
